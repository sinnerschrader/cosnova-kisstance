{
  "name": "kisstance",
  "description": "kisstance microsite",
  "version": "1.0.0",
  "main": "index.html",
  "scripts": {
    "lint:scss": "stylelint './src/scss/*.scss' ",
    "lint:js": "eslint './src/js/*.js' ",
    "lint:all": "npm run lint:scss && npm run lint:js",
    "build:css": "node-sass --include-path scss src/scss/main.scss public/main.css",
    "watch:css": "npm run build:css && npm run build:css -- -w",
    "start": "browser-sync start --server --files='./*.html,./*.css', nodemon -e scss -x 'npm run build:css', node-sass --watch scss -o css, 'npm run build:css'"
  },
  "repository": {
    "type": "git",
    "url": "https://git.sinnerschrader.com:olagas/kisstance.git"
  },
  "keywords": [],
  "author": "Ola Gasidlo, Tamara Kis, Taha Zia",
  "license": "MIT",
  "bugs": {
    "url": "https://git.sinnerschrader.com/olagas/kisstance/-/issues"
  },
  "homepage": "https://git.sinnerschrader.com/olagas/kisstance/",
  "devDependencies": {
    "browser-sync": "^2.26.7",
    "eslint": "^6.8.0",
    "node-scss": "^4.13.1",
    "nodemon": "^2.0.2",
    "stylelint": "^13.2.1",
    "stylelint-scss": "^3.16.0"
  },
  "dependencies": {
    "node-sass": "^4.13.1"
  }
}
